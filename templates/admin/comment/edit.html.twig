{% extends 'admin/base.html.twig' %}
{% block title %}Modification du commentaire
    {{comments.id}}
{% endblock %}
{% form_theme form _self %}
{% block body %}

    <div class="container">
        <h1 class="my-5">Modification du commentaire :
            {{comments.id}}</h1>
        <div class="alert alert-info">
            <strong>Annonce liée :
            </strong>
            {{comments.ad.title}}<br>
            <strong>Auteur :
            </strong>
            {{comments.author.fullName}}<br>
            <strong>Date de creation :</strong>{{comments.createdAt |date('d/m/Y')}}
            <br>
            <strong>Note donnée:
            </strong>{{comments.rating}}
        </div>
        {{form_start(form)}}

        {{form_widget(form)}}
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-check"></i>
            Modifier</button>
        {{form_end(form)}}
    </div>

</div>
{% endblock %}