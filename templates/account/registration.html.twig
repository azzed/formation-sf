{% extends 'base.html.twig' %}
{% block title %}Inscription{% endblock %}
{% block body %}

    <div class="container">
        <h1 class="my-5">Inscrivez vous</h1>

        {{form_start(form)}}
        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                    <h2 class="alert-heading">Information general</h2>
                    <hr>
                    {{form_row(form.firstName)}}
                    {{form_row(form.lastName)}}
                    {{form_row(form.email)}}
                    {{form_row(form.picture)}}
                </div>
                <div class="alert alert-light">
                    <h2 class="alert-heading">Mot de passe</h2>
                    <hr>
                    {{form_row(form.hash)}}
                    {{form_row(form.passwordConfirmation)}}
                </div>
            </div>
            <div class="col">

                <div class="alert alert-light clearfix">
                    <h2 class="alert-heading">Détails</h2>
                    <hr>
                    {{form_row(form.introduction)}}
                    {{form_row(form.description)}}
                    <hr>
                    <p>Vous avez terminé ? Vous pouvez enregistré vos inscription</p>
                    <button type="submit" class="btn btn-success float-right">
                        <i class="fas fa-check"></i>
                        Enregistré</button>
                </div>
            </div>
        </div>

        {{form_end(form)}}
    </div>

{% endblock %}