{% extends 'base.html.twig' %}
{% block title %}Modification du profil{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="my-5">Modification du profil</h1>
        {{form_start(form)}}
        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                    <h2 class="alert-heading">Information general</h2>
                    <hr>
                    {{form_row(form.firstName)}}
                    {{form_row(form.lastName)}}
                    {{form_row(form.email)}}
                    {{form_row(form.picture)}}
                </div>
            </div>
            <div class="col">
                <div class="alert alert-light">
                    <h2 class="alert-heading">Détails</h2>
                    <hr>
                    {{form_row(form.introduction)}}
                    {{form_row(form.description)}}
                    <hr>
                    <p>Vous avez terminé ? Vous pouvez enregistré vos modifications</p>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-pencil"></i>
                        Enregister</button>
                </div>
            </div>
        </div>

        {{form_end(form)}}
    </div>
{% endblock %}